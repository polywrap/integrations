{
  "name": "ipfs-wasm-rs",
  "description": "A Polywrap Wasm wrapper for executing IPFS operations",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "build": "npx polywrap build --no-codegen",
    "codegen": "npx polywrap codegen",
    "deploy": "npx polywrap deploy",
    "test": "yarn test:e2e",
    "test:e2e": "yarn test:e2e:codegen && jest --passWithNoTests --runInBand --verbose",
    "test:e2e:codegen": "npx polywrap codegen -m ./src/__tests__/types/polywrap.app.yaml -g ./src/__tests__/types/wrap"
  },
  "devDependencies": {
    "polywrap": "0.8.0",
    "@polywrap/ipfs-http-client-lite": "0.3.0",
    "@polywrap/concurrent-promise-plugin": "file:../../../system/concurrency/implementations/promise",
    "@types/jest": "27.0.3",
    "jest": "26.6.3",
    "ts-jest": "26.5.4",
    "typescript": "4.0.7",
    "axios": "0.21.4"
  }
}
