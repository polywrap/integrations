{
  "name": "near-polywrap-api",
  "description": "Re-implements near-api-js as a secure, fast, composable Polywrapper",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "prettier-format": "npx prettier --write ./src",
    "reset": "yarn clean && yarn && yarn build",
    "postinstall": "patch-package",
    "clean": "npx rimraf ./node_modules ./build ./coverage ./.w3 ./**/w3",
    "build": "npx polywrap build",
    "codegen": "npx polywrap codegen",
    "test:env:up": "npx polywrap infra up --modules=eth-ens-ipfs",
    "test:env:down": "npx polywrap infra down --modules=eth-ens-ipfs",
    "deploy": "npx polywrap deploy",
    "test": "jest --passWithNoTests --runInBand --verbose",
    "test:read": "jest ./e2e/read.spec.ts --passWithNoTests --runInBand --verbose --silent=false",
    "test:write": "jest ./e2e/write.spec.ts --passWithNoTests --runInBand --verbose --silent=false",
    "test:fetch": "jest ./e2e/fetch.spec.ts --passWithNoTests --runInBand --verbose --silent=false",
    "test:jsonRpcRequest": "jest ./e2e/jsonRpcRequests.spec.ts --passWithNoTests --runInBand --verbose --silent=false",
    "test:transactions": "jest ./e2e/transactions.spec.ts --passWithNoTests --runInBand --verbose --silent=false",
    "test:wallet": "jest ./e2e/wallet.spec.ts --passWithNoTests --runInBand --verbose --silent=false",
    "test:format": "jest ./e2e/format.spec.ts --passWithNoTests --runInBand --verbose --silent=false",
    "test:borsh": "jest ./e2e/borsh.spec.ts --passWithNoTests --runInBand --verbose --silent=false"
  },
  "dependencies": {
    "as-base58": "0.1.1",
    "as-base64": "0.2.0",
    "as-bignum": "^0.2.23",
    "as-fraction": "0.2.0",
    "localstorage-polyfill": "1.0.1",
    "mock-browser": "0.92.14"
  },
  "devDependencies": {
    "@polywrap/client-js": "0.2.0",
    "@polywrap/test-env-js": "0.2.0",
    "@polywrap/wasm-as": "^0.3.0",
    "@types/bn.js": "5.1.0",
    "@types/jest": "27.0.2",
    "@typescript-eslint/eslint-plugin": "4.11.1",
    "@typescript-eslint/parser": "4.11.1",
    "assemblyscript": "0.19.5",
    "bn.js": "5.2.0",
    "eslint": "7.16.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.3.0",
    "jest": "27.0.6",
    "near-api-js": "0.44.2",
    "near-hello": "0.5.1",
    "patch-package": "6.4.7",
    "polywrap": "0.2.0",
    "postinstall-postinstall": "2.1.0",
    "prettier": "2.2.1",
    "solc": "0.8.3",
    "ts-jest": "27.0.4",
    "ts-node": "8.10.2",
    "typescript": "4.0.7"
  }
}
